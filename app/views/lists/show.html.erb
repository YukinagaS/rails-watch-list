<div class="container">
  <div class="row my-5">
    <h1><%= @list.name %></h1>
  </div>
  <div class="row">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card" style="width: 18rem;">
        <img src="<%= bookmark.movie.poster_url %>" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title"><%= bookmark.movie.title %></h5>
          <p class="card-text"><%= bookmark.comment %></p>
          <%= link_to image_tag('delete.svg'), bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: 'Destroy?'}, class: "btn btn-danger" %>
        </div>
      </div>
    <% end %>
  <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.association :movie %>
    <%= f.input :comment %>
    <%= f.button :submit, "Add Movie to list", class: "btn btn-success" %>
  <% end %>
</div>
